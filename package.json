{
  "name": "bttv-hover-preview",
  "displayName": "Better twitchTv emotes Hover Preview",
  "description": "Shows a hover image preview of BetterTTV emotes in comments.",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.92.0"
  },
	"publisher": "Rudy",
	"repository": {
		"type": "git",
		"url": "https://github.com/DioLps/bttv-hover-preview.git"
	},
	"icon": "images/exampleTwo.png",
  "categories": [
    "Themes",
    "Other"
  ],
  "activationEvents": [
    "onLanguage:*"
  ],
  "main": "out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "javascript",
        "extensions": [
          ".js"
        ],
        "aliases": [
          "JavaScript",
          "js"
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "dependencies": {
    "axios": "^1.7.5"
  },
  "devDependencies": {
    "@types/vscode": "^1.92.0",
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.11.0",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0"
  }
}
